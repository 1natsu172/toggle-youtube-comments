{
  "manifest_version": 2,
  "name": "Toggle YouTube Comments",
  "description": "Hides YouTube comments by default",
  "version": "2.0.3",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*.youtube.com/*", "https://*.youtube.com/*"],
      "js": ["script.js"],
      "css": ["youtube.css"],
      "run_at": "document_start"
    }
  ]
}
